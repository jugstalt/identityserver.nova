@page
@model IdentityServer.Areas.Admin.Pages.Resources.EditApi.DeleteApiModel
@{
    ViewData["Title"] = "Delete Api Resource";
    ViewData["ActivePage"] = EditApiResourceNavPages.DeleteApi;
}


<div class="row">
    <div class="col-md-6">
        <partial name="_StatusMessage" model="Model.StatusMessage" />
        <form id="-form" method="post">
            <h4>@ViewData["Title"]</h4>
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Input.ApiName" />
            <div class="form-group">
                <label>Type API name</label>
                <input asp-for="Input.ConfirmApiName" class="form-control" />
                <span asp-validation-for="Input.ConfirmApiName" class="text-danger"></span>
            </div>
            <button id="delete-client-button" type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>
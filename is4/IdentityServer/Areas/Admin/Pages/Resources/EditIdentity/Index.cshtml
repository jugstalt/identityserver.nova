@page
@model IdentityServer.Areas.Admin.Pages.Resources.EditIdentity.IndexModel
@{
    ViewData["Title"] = "Identity Resource Names";
    ViewData["ActivePage"] = EditIdentityResourceNavPages.Index;
}

    <div class="row">
        <div class="col-md-6">
            <form id="-form" method="post">
                <h4>@ViewData["Title"]</h4>
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="Input.Name" />
                <div class="form-group">
                    <label>Name</label>
                    <input value="@Model.Input.Name" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="Input.DisplayName"></label>
                    <input asp-for="Input.DisplayName" class="form-control" />
                    <span asp-validation-for="Input.DisplayName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Decription"></label>
                    <textarea asp-for="Input.Decription" class="form-control" rows="5">

                </textarea>
                    <span asp-validation-for="Input.Decription" class="text-danger"></span>
                </div>
                <button id="update-api-button" type="submit" class="btn btn-default">Save</button>
            </form>
        </div>
    </div>